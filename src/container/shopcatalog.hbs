<main class="m-2">
    <div class="row">
        {{#with navigation}}
        <div class="nav pb-5">
            {{#each links}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
        <div>
            <div class="nav pb-5">
                <div class="nav-item"></div>
                <ul class="breadcrumb">
                    {{#each breadcrumb}}
                    <li class="breadcrumb-item">
                        <a href="url" class="nav-link {{#unless url}}disabled{{/unless}}">{{name}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="display-4">{{header}}</div>
        <div class="row">
            {{#each sortBlock}}
            <div class="col-3 pt-4">
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>
        <div class="row mt-5">
            {{#with filterBlock}}

            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        {{#with sellers}}
                        <label class="form-check-label"> {{title}}</label>
                        <div class="form-check">
                            {{#each list}}
                            <input class="form-check-input" type="checkbox">
                            <option class="pb-1">{{value}}</option>
                            {{/each}}
                        </div>
                        {{/with}}
                        <div>
                            <hr>
                        </div>
                        <div>
                            {{#with brands}}
                            <label class="form-check-label pb-2"> {{title}}</label>
                            <div class="text-field">
                                <input class="form-control mb-2" placeholder="{{input.placeholder}}">
                            </div>
                            <div class="form-check">
                                {{#each options}}
                                <input class="form-check-input" type="checkbox">
                                <option class="pb-1">{{value}}</option>
                                {{/each}}
                            </div>
                            <div>
                                <hr>
                            </div>
                            {{/with}}
                            <div>
                                {{#with price}}
                                <p>{{title}}</p>
                                <input class="form-control my-3" placeholder="{{range.from}}">
                                <input class="form-control my-3" placeholder="{{range.to}}">
                                <a href="{{button.link}}" class="btn btn-outline-secondary">{{button.text}}</a>
                                {{/with}}
                            </div>

                            <div>
                                {{#each filterList}}
                                <hr>
                                <label class="form-check-label pb-2"> {{title}}</label>

                                <div class="form-check">
                                    {{#each options}}
                                    <input class="form-check-input " type="checkbox">
                                    <option class="pb-1">{{value}}</option>
                                    {{/each}}
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>

            <div class="col-8">
                <div class="row">
                    {{#each goodsList}}
                    <div class="col-6">
                        <div class="card">
                            <img class="card-img-top" src="{{img}}">
                            <div class="card-body">
                                {{#if isHot}}<h5 class="badge text-bg-warning rounded-pill text-uppercase text-light ">
                                    Hot
                                </h5>{{/if}}
                                {{#if isNew}}<h5 class="badge text-bg-primary rounded-pill text-uppercase text-light ">
                                    Нове
                                </h5>{{/if}}<br>
                                {{#if isFast}}<h5 class="badge text-bg-success   text-light ">
                                    Швидка доставка
                                </h5>{{/if}}<br>
                                {{#if isFree}}<h5 class="badge text-bg-secondary   text-light ">
                                    Безкоштовна доставка
                                </h5>{{/if}}<br>
                                <b>{{name}}</b>
                                <p class="text-muted">{{review.amount}} {{review.text}}</p>
                                <h4>{{price}}</h4>
                                <p class="text-muted">{{delivery}}</p>
                                {{#each buttons}}
                                <div class="mb-2">
                                    <p> {{#if isPrimary}}<a href='{{link}}' class='btn btn-primary'>{{text}}</a>{{/if}}
                                    </p>
                                    {{#if isSecondary}}<a href='{{link}}' class='btn btn-secondary'>{{text}}</a>{{/if}}
                                </div>
                                {{/each}}
                                {{#each characteristics }}
                                <div>
                                    <ul>
                                        <li>
                                            {{title}}: {{value}}
                                        </li>
                                    </ul>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-12 mt-5 mb-5">
                <div class="card text-bg-success text-center">
                    {{#with service}}
                    <div class="card-body">
                        <div class="display-4">{{title}}</div>
                        <p>{{description}}</p>
                        {{#each buttons}}
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
            <div>
                <hr>
            </div>
            <div class="row">
                {{#each footer}}
                <div class="col-2">
                    {{#each this}}
                    <div class="nav ps-1 px-1 pt-1">
                        <div class="nav-item">
                            <a href="{{link}}" class="btn btn-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>
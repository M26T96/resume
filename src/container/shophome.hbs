<main class="m-3">
    <div>
        {{#with navigation}}
        <div class="row">

            <div class="col-12 mb-5">
                <div class="card">
                    <div class="nav">
                        <div class="nav-item">
                            <a href="{{links.[0].href}}" class="nav-link">{{links.[0].text}}</a>
                        </div>
                        <div class="nav-item">
                            <a href="{{links.[1].href}}" class="nav-link">{{links.[2].text}}</a>
                        </div>
                        <div class="nav-item">
                            <a href="{{links.[2].href}}" class="nav-link">{{links.[2].text}}</a>
                        </div>
                        <div class="nav-item">
                            <a href="{{links.[3].href}}" class="nav-link disabled">Disabled</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>

        <div>
            {{#with newsBlock}}
            <div class="dispaly-3 text-center">{{title}}</div>
            <div class="row gy-2 gx-2   ">
                {{#each cards}}
                <div class="col-3">
                    <div class="card text-bg-dark text-light">
                        <div class="ps-5">
                            {{#if isTop}}<h5 class='badge text-bg-danger rounded-pill '>Топ</h5>{{/if}}
                            {{#if isNew}}<h5 class='badge text-bg-success rounded-pill'>Нова</h5>{{/if}}
                        </div>
                        <div class="card-header pe-5">{{title}}
                        </div>
                        <div class="card text-bg-dark text-light">
                            <div class="card-body">{{description}}</div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <div>
            {{#with goodsBlock}}
            <div class="row ">
                <div>
                    <div class="nav">
                        {{#each tabs}}
                        <div class="nav-tabs mb-3">
                            <div>
                                {{#if isActive}}<a class="nav-link active">{{text}}</a>{{/if}}
                                {{#if isDisabled}}<a class="nav-link disabled">{{text}}</a>{{/if}}
                            </div>
                            <div>
                                {{#unless isActive}}
                                {{#unless isDisabled}}
                                <a class="nav-link">{{text}}</a>
                                {{/unless}}
                                {{/unless}}
                            </div>
                        </div>
                        {{/each}}
                        <div>
                            <div class="row g-2">
                                {{#each cards}}
                                <div class="col-4">
                                    <img class="card-img-top" src="{{image}}">
                                    <div class="card-title pe-5 px-2">{{title}}
                                        {{#if isHot}}<h5
                                            class='badge text-bg-warning rounded-pill text-uppercase text-light '>Hot
                                        </h5>
                                        {{/if}}
                                        {{#if isNew}}<h5 class='badge text-bg-primary rounded-pill '>Нове</h5>{{/if}}
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted">{{description}}</p>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/with}}
                <hr>
                <div class="row">
                    {{#with subscribe}}
                    <div class="col-12">
                        <div class="card text-bg-dark mb-2">
                            <div class="header">{{header}}</div>
                            <div class="card-body">
                                <p class="text-light">{{description}}</p>
                                {{#each buttons}}
                                <a href="{{link}}" class="btn btn-primary m-1">{{text}}</a><br>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                    <hr>
                    <div class="col-12">
                        <div class="card text-bg-success text-center mb-2">
                            <div class="card-title">{{service.title}}</div>
                            <div class="card-body">
                                <p class="text-light">{{service.description}}</p>
                                {{#each service.buttons}}
                                <a href="{{link}}" class="btn btn-primary m-1">{{text}}</a><br>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        {{#each footer}}
                        <div class="col-2">
                            {{#each this}}
                            <div class="nav ps-1 px-1  pt-1">
                                <div class="nav-item">
                                    <a href="{{link}}" class="btn btn-link nav-link">{{text}}</a>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
</main>
<main class="m-2">
    <div class="row">
        {{#with navigation}}
        <div class="card mb-5">
            <div class="col-12">
                <div class="nav ">
                    <div class="nav-item">
                        <a href="{{links.[0].href}}" class="btn btn-link nav-link">{{links.[0].text}}</a>
                    </div>
                    <div class="nav-item">
                        <a href="{{links.[1].href}}" class="btn btn-link nav-link">{{links.[1].text}}</a>
                    </div>
                    <div class="nav-item">
                        <a href="{{links.[2].href}}" class="btn btn-link nav-link disabled">{{links.[2].text}}</a>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
        <div>
            <div class="row">
                <div class="col-8">
                    {{#with formBlock}}
                    <div class="display-4 pb-3">{{header}}</div>
                    <p class="text-muted">{{rating.title}}: {{rating.value}}</p>
                    {{#with actionBlock}}
                    {{#each tabs}}
                    <div class="nav nav-tabs ms-5 mb-4">
                        {{#if isActive}}
                        <div class="nav-item  ">
                            <a href='#' class=" nav-link active">{{text}}</a>
                        </div>
                        {{/if}}
                    </div>
                    {{/each}}
                    <div class="mb-5 mt-5">
                        <hr>
                    </div>
                    <div>
                        {{#with report}}
                        <div class="card">
                            <div class="card-body">
                                <div class="display-6 pb-3">{{title}}</div>
                                <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    <div class="mb-5 mt-5">
                        <hr>
                    </div>
                    {{/with}}
                    <div>
                        {{#with feedbackBlock}}
                        <div class="display-5 pb-4">{{title}}</div>
                        {{#each buttons}}
                        {{#if isWarning}}<a href="{{link}}" class="btn btn-warning text-light">{{text}}</a>{{/if}}
                        {{#if isSuccess}}<a href="{{link}}" class="btn btn-success text-light mx-2">{{text}}</a>{{/if}}
                        {{#if isDanger}}<a href="{{link}}" class="btn btn-danger text-light">{{text}}</a>{{/if}}
                        {{/each}}
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                <div class="col-4">
                    {{#with goodsInfo}}
                    <div class="card">
                        <img src="{{photo}}">
                        <div class="card-body">
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
        <div class="mb-5 mt-5">
            <hr>
        </div>
    </div>
</main>
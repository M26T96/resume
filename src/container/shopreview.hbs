<main class="m-2">
    <div class="row">
        {{#with navigation}}
        <div class="card mb-5">
            <div class="col-12">
                <div class="nav ">
                    <div class="nav-item">
                        <a href="{{links.[0].href}}" class="btn btn-link nav-link">{{links.[0].text}}</a>
                    </div>
                    <div class="nav-item">
                        <a href="{{links.[1].href}}" class="btn btn-link nav-link">{{links.[1].text}}</a>
                    </div>
                    <div class="nav-item">
                        <a href="{{links.[2].href}}" class="btn btn-link nav-link disabled">{{links.[2].text}}</a>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
        <div>
            <div class="row">
                {{#with formBlock}}
                <div class="col-8">
                    <div class="display-4 pb-3">{{header}}</div>
                    <p class="text-muted">{{rating.title}}: {{rating.value}}</p>
                    {{#with actionBlock}}
                    <div>
                        <ul class="nav nav-tabs mb-5">
                            {{#each tabs}}
                            <li class="nav-item">
                                <a class="nav-link {{#if isActive}}active{{/if}}" href='#'>
                                    <span class='px-5'>{{text}}</span>
                                </a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="mb-5 mt-5">
                        <hr>
                    </div>
                    <div>
                        {{#with report}}
                        <div class="card">
                            <div class="card-body">
                                <div class="display-6 pb-3">{{title}}</div>
                                <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    <div class="mb-5 mt-5">
                        <hr>
                    </div>
                    {{/with}}
                    <div>
                        {{#with feedbackBlock}}
                        <div class="display-5 pb-4">{{title}}</div>
                        {{#each buttons}}
                        {{#if isWarning}}<a href="{{link}}" class="btn btn-warning text-light">{{text}}</a>{{/if}}
                        {{#if isSuccess}}<a href="{{link}}" class="btn btn-success text-light mx-2">{{text}}</a>{{/if}}
                        {{#if isDanger}}<a href="{{link}}" class="btn btn-danger text-light">{{text}}</a>{{/if}}
                        {{/each}}
                        {{/with}}
                    </div>
                </div>
                {{#with goodsInfo}}
                <div class="col-4">
                    <div class="card mb-2">
                        <img src="{{photo}}">
                        <div class="card-body">
                            <p class="display-6">{{name}}</p>
                        </div>
                    </div>
                    <div class='card mb-2'>
                        <div class="card-body">
                            {{price}}
                            {{#if inMarket}}<p class='form-text text-success'>Є в наявності</p>{{/if}}
                            {{#each buttons}}
                            <p>{{#if isPrimary}}<a href='{{link}}' class='btn btn-primary'>{{text}}</a>{{/if}}</p>
                            <p> {{#if isSecondary}}<a href='{{link}}' class='btn btn-secondary'>{{text}}</a>{{/if}}</p>
                            {{/each}}
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <p>{{seller.title}}: <b>{{seller.value}}</b></p>
                        </div>
                    </div>
                </div>
                {{/with}}
                {{/with}}
            </div>
        </div>
        <div class="mb-5 mt-5">
            <hr>
        </div>
        <div>
            {{#each reviewList}}
            <div class="card mb-2">
                <div class="card-body">
                    <div class="card">

                        {{#with title}}
                        <b>{{userName}}</b>
                        <p class="form-text">{{caption}}</p>
                        <data>{{date}}</data>
                        {{/with}}
                        <div class="card mb-5">
                            <div class="card-body">
                                {{#with reviewBody}}
                                <div class="mb-3">
                                    {{seller.title}}: {{seller.value}}
                                </div>
                                <div class="mb-3">
                                    {{rating.title}}: {{rating.value}}
                                </div>
                                <div class="mb-3">
                                    {{text.[0]}}
                                </div>
                                <div class="mb-3">
                                    {{text.[1]}}
                                </div>
                                <div class="mb-3">
                                    <h5>{{advantages.title}}</h5>
                                    {{advantages.text}}
                                </div>
                                <div class="mb-3">
                                    <h5>{{disadvantages.title}}</h5>
                                    {{disadvantages.text}}
                                </div>
                                <div>
                                    {{#each images}}
                                    <img src="{{this}}">
                                    {{/each}}
                                </div>
                            </div>
                            <div class="ps-5 pt-5">
                                {{#each coments}}
                                <div class="card my-3">
                                    <div class="display-6 pb-2">{{userName}}</div>
                                    <data class="pb-3">{{date}}</data>
                                    {{text}}
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            <div class="col-12">
                {{#with service}}
                <div class="card text-bg-success text-center">
                    <div class="card-body">
                        <div class="display-5 pb-2">{{title}}</div>
                        <p>{{description}}</p>
                        {{#each buttons}}
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        <div class="mb-5 mt-5">
            <hr>
        </div>
        <div class="row">
            {{#each footer}}
            <div class="col-2">
                {{#each this}}
                <div class="nav ps-1 px-1 pt-1">
                    <div class="nav-item">
                        <a href="{{link}}" class="btn btn-link {{#if @last}}disabled{{/if}} nav-link">{{text}}</a>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
</main>